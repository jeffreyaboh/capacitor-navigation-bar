{
  "name": "capacitor-navigation-bar",
  "version": "7.0.0",
  "description": "Capacitor Plugin for Navigation Bar",
  "main": "dist/plugin.cjs.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "unpkg": "dist/plugin.js",
  "private": false,
  "files": [
    "android/src/main/",
    "android/build.gradle",
    "dist/",
    "ios/Plugin/",
    "NavigationBar.podspec"
  ],
  "author": "Jeffrey Aboh",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jeffreyaboh/capacitor-navigation-bar"
  },
  "bugs": {
    "url": "https://github.com/jeffreyaboh/capacitor-navigation-bar/issues"
  },
  "keywords": [
    "capacitor",
    "plugin",
    "native",
    "navigation",
    "bar"
  ],
  "scripts": {
    "verify": "npm run verify:ios && npm run verify:android && npm run verify:web",
    "verify:ios": "cd ios && pod install && xcodebuild -workspace Plugin.xcworkspace -scheme Plugin && cd ..",
    "verify:android": "cd android && ./gradlew clean build test && cd ..",
    "verify:web": "npm run build",
    "lint": "npm run eslint && npm run prettier -- --check && npm run swiftlint -- lint",
    "fmt": "npm run eslint -- --fix && npm run prettier -- --write && npm run swiftlint -- autocorrect --format",
    "eslint": "eslint . --ext ts",
    "prettier": "prettier \"**/*.{css,html,ts,js,java}\"",
    "swiftlint": "node-swiftlint",
    "docgen": "docgen --api NavigationBarPlugin --output-readme README.md --output-json dist/docs.json",
    "build": "npm run clean && npm run docgen && tsc && rollup -c rollup.config.js",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@capacitor/android": "^7.4.0",
    "@capacitor/cli": "^7.4.0",
    "@capacitor/core": "^7.4.0",
    "@capacitor/docgen": "0.3.0",
    "@capacitor/ios": "^7.4.0",
    "@ionic/eslint-config": "0.4.0",
    "@ionic/prettier-config": "4.0.0",
    "@ionic/swiftlint-config": "2.0.0",
    "eslint": "9.29.0",
    "prettier": "3.5.3",
    "prettier-plugin-java": "2.6.8",
    "rimraf": "6.0.1",
    "rollup": "4.44.0",
    "swiftlint": "2.0.0",
    "typescript": "5.8.3"
  },
  "peerDependencies": {
    "@capacitor/core": "^7.4.0"
  },
  "prettier": "@ionic/prettier-config",
  "swiftlint": "@ionic/swiftlint-config",
  "eslintConfig": {
    "extends": "@ionic/eslint-config/recommended"
  },
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  },
  "dependencies": {
    "@capacitor/app": "^7.0.1",
    "@capacitor/haptics": "^7.0.1",
    "@capacitor/keyboard": "^7.0.1",
    "@capacitor/status-bar": "^7.0.1"
  }
}
